<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @game %>
  <div class='row'>
    <%= render 'users/user_info', user: current_user %>
    <div class='col-md-8 offset-md-1'>
      <h2>Group Detail</h2>
      <div>
        <% if @group.image.attached? %>
          <%= image_tag @group.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %><br>
        グループ名：<%= @group.name %><br>
        オーナー：<%= image_tag @group.owner.get_profile_image(100,100), class: 'placeholder-image', style: 'width: 100px; height: 100px;' %><%= @group.owner.name %>
      </div>
      <div>紹介文：<%= @group.introduction %></div>
      <% if @group.owner == current_user %>
        <%= link_to 'Notice an Event',group_group_mails_new_path(@group), class: "btn btn-sm btn-info" %>
        <%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success edit_game_#{@group.id}" %>
        <%= link_to 'Destroy', group_path(@group),method: :delete,data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger edit_game_#{@group.id}" %>
      <% elsif @group.users.include?(current_user) %>
        <%= link_to 'Leave this group', group_exit_path(@group), method: :delete, class: "btn btn-sm btn-danger" %>
      <% else %>
        <%= link_to 'Join this group', group_join_path(@group), class: "btn btn-sm btn-success" %>
      <% end %>
      <div>
        メンバー<br>
        <% @group.users.each do |member| %>
        <%= image_tag member.get_profile_image(100,100), class: 'placeholder-image', style: 'width: 100px; height: 100px;' %>
          <%= member.name %><br>
        <% end %>
      </div>
    </div>
  </div>
</div>
