<div class="container">
  <div class="row">
    <%= render '/users/user_info', user: @game.user %>
    <div class="col-md-8 offset-md-1">
      <h2>Game detail</h2>
            <div>
              <%= link_to user_path(@game.user.id) do %>
                <%= image_tag @game.user.get_profile_image(100, 100), class: 'placeholder-image', style: 'width: 100px; height: 100px;' %><br>
                <%= @game.user.name %>
              <% end %>
              投稿日：<%= @game.created_at.strftime('%Y/%m/%d') %>
            </div>
            <h1><%= @game.game_name%></h1>
            <div><%= image_tag @game.get_image(400,200), class: 'placeholder-image', style: 'width: 400px; height: 200px;' %></div>
            <div><%= @game.caption %></div>
            <div class=<%= "favorite-" + @game.id.to_s %> >
              <%= render "favorites/btn", game: @game %>
            </div>
            <div class="game-comments-counter">
              <%= render "game_comments/counter", game: @game %>
            </div>
            <div><% if @game.user == current_user %>
              <div><%= link_to "Edit", edit_game_path(@game.id), class: "btn btn-sm btn-success" %>
              <%= link_to "Destroy", game_path(@game.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger destroy" %>
                <% end %></div>

      <div class="game-comments-index">
        <%= render "game_comments/index", game: @game %>
      </div>
      <%= render "game_comments/form", game: @game, game_comment: @game_comment %>
    </div>
  </div>
</div>