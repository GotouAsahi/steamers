<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>ゲーム名</th>
      <th>説明</th>
      <th colspan"3"></th>
    </tr>
  </thead>
  <tbody>
    <tr><% games.each do |game| %></tr>
      <td>
        <%= link_to user_path(game.user.id) do %>
          <%= image_tag game.user.get_profile_image(80,80),class:"mt-3 rounded-circle"; %>
        <% end %>
      </td>
      <td><%= link_to game.game_name, game_path(game.id) %></td>
      <td><%= game.caption %></td>
    <% end %>
  </tbody>
</table>