<%= form_with model: game do |f| %>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, accept: "image/*"%>
  </div>
  <div class="form-group">
    <%= f.label :game_name %>
    <%= f.text_field :game_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_area :caption, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Tag %>
    <%= f.text_field :tag, class: 'form-control' %>
  </div>
  <% if game.id.nil? %>
    <div class="form-group", id='star'>
      <%= f.label :Star %>
      <%= f.hidden_field :star, id: :review_star %>
    </div>
  <% else %>
    <%= render "output_star", game: game %>
  <% end %>
  <div class="form-group">
    <%= f.submit class: 'form-control' %>
  </div>
<% end %>

<script>
  raty(document.getElementById('star'), {
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      scoreName: 'game[star]'
  });
</script>