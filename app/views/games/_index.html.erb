<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Game_image</th>
      <th>Title</th>
      <th>Caption</th>
      <th colspan"3"></th>
    </tr>
  </thead>
  <tbody>
    <% games.each do |game| %>
      <tr>
        <td>
          <%= link_to user_path(game.user.id) do %>
            <%= image_tag game.user.get_profile_image(80,80), class: 'placeholder-image mt-3 rounded-circle', style: 'width: 100px; height: 100px;' %>
          <% end %>
        </td>
        <td> <%= image_tag game.get_image(100,80), class: 'placeholder-image mt-3', style: 'width: 100px; height: 80px;' %></td>
        <td><%= link_to game.game_name, game_path(game.id) %></td>
        <td><%= game.caption %></td>
        <td class=<%= "favorite-" + game.id.to_s %> >
            <%= render "favorites/btn", game: game %>
        </td>
        <td><%= render "game_comments/counter", game: game %></td>
      </tr>
    <% end %>
  </tbody>
</table>